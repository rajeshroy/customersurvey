<mvc:View controllerName="sap.cust.surveycustomersurvey1.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout"
	  xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" >
<App>
	<pages>
			<Page title="{i18n>title}">
				<headerContent >
					<Image src="http://www.triconinfotech.com/wp-content/uploads/2015/01/tricon-logo-01.png" width="auto" height="1.5rem"/>
					
				</headerContent>
				<content>
	              <l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<Label text="{i18n>Project}" labelFor="projectInput"/>
			<Input  width="40em"
				id="projectInput"
				type="Text"
				placeholder="Enter Project Id ..."
				showSuggestion="true"
				suggestionItems="{/ProjectId}" >
				<suggestionItems>
					<core:Item text="{ProjectId}" />
				</suggestionItems>
			</Input>
		</l:content>
	</l:VerticalLayout>
					<Table id="idQuestionTable" inset="false" items="{/QuestionDetSet}" >
						<headerToolbar >
							<Toolbar>
								<Title text="{i18n>Txt}" level="H2"/>
							</Toolbar>
						</headerToolbar>
						
						<columns>
							<Column width="80em">
								<Text text="{i18n>Ques}"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="{i18n>Rate}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<ObjectIdentifier title="{QuestionId}" text="{QuestionText}"/>
									<RatingIndicator maxValue="5" class="sapUiSmallMarginBottom" value=" "/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<form:SimpleForm editable="true" id="formId">
						<Label text="{i18n>Description}"/>
						<TextArea id="Descriptionid" value="{/Description}" valueLiveUpdate="{/ValueLiveUpdate}" liveChange="handleLiveChange"/>
					   
					</form:SimpleForm>
					
				
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="{i18n>Save}" press="onSave" type="Accept" />
					</Toolbar>
				</footer>
			</Page>
	</pages>
	</App>
</mvc:View>